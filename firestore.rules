
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Any authenticated user can read chats and messages
    match /chats/{chatId} {
      allow read: if request.auth.uid != null;
      // Only consultants can write to chats
      allow write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant';

      // Helper to check whether a user is currently banned
      function isUserBanned(uid) {
        let u = get(/databases/$(database)/documents/users/$(uid));
        return u.exists && u.data.isBanned == true && ( !(u.data.bannedUntil) || request.time < u.data.bannedUntil );
      }

      // Rules for messages within a chat
      match /messages/{messageId} {
        allow read: if request.auth.uid != null;
        
        // Users can create messages if they are the sender and not banned; consultants can always create messages
        allow create: if request.auth.uid != null && (
          (request.resource.data.userId == request.auth.uid && !isUserBanned(request.auth.uid))
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant'
        );

        // Only consultants can update or delete messages
        allow update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant';
      }
    }

    // AI chats are read-only for consultants
    match /ai_chats/{chatId} {
      allow read: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant';
      allow write: if false;

      // AI messages are read-only for consultants
      match /messages/{messageId} {
        allow read: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant';
        allow write: if false;
      }
    }

    // Contact messages can be created by any user
    match /contact_messages/{messageId} {
      allow create: if true;
      // Consultants can read, update and delete contact messages
      allow read, update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant';
    }

    // Users collection to store user roles
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      // Allow writes only by the user themself or by consultants (admins)
      allow write: if request.auth.uid != null && (
        request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'consultant'
      );
    }
  }
}
